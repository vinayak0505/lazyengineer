<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/jobs_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/jobs_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="General Manager" />

    <TextView
        android:id="@+id/jobs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        tools:text="ITPO Recruitment 2020" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/jobs_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Chandigarh" />

        <TextView
            android:id="@+id/jobs_salary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Inr 60,000/per Month" />
    </LinearLayout>

</LinearLayout>